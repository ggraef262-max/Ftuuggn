for i, data in ipairs(handlePositions) do
    local handle = Create("Frame", MainFrame, {
        Size = data.Size,
        Position = data.Position,
        BackgroundColor3 = Configs_HUB.Cor_Stroke,
        BackgroundTransparency = 0.5,
        Visible = false
    })
    Corner(handle)
    resizeHandles[i] = handle
    
    -- ØªØºÙŠÙŠØ± Ø´ÙƒÙ„ Ø§Ù„Ù…Ø¤Ø´Ø±
    handle.MouseEnter:Connect(function()
        UserInputService.MouseIcon = data.Cursor
    end)
    handle.MouseLeave:Connect(function()
        UserInputService.MouseIcon = ""
    end)
    
    -- Ø³Ø­Ø¨ Ù„ØªØºÙŠÙŠØ± Ø§Ù„Ø­Ø¬Ù…
    local dragging = false
    local startSize, startPos, startMouse
    
    handle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            startSize = MainFrame.Size
            startPos = MainFrame.Position
            startMouse = input.Position
            handle.BackgroundColor3 = Configs_HUB.Cor_Text
            SetBlur(3)
        end
    end)
    
    handle.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
            handle.BackgroundColor3 = Configs_HUB.Cor_Stroke
            SetBlur(0)
            Settings.WindowSize = {MainFrame.Size.X.Offset, MainFrame.Size.Y.Offset}
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - startMouse
            
            if i == 1 then -- ÙŠÙ…ÙŠÙ†
                MainFrame.Size = UDim2.new(0, startSize.X.Offset + delta.X, 0, startSize.Y.Offset)
            elseif i == 2 then -- ÙŠØ³Ø§Ø±
                MainFrame.Size = UDim2.new(0, startSize.X.Offset - delta.X, 0, startSize.Y.Offset)
                MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset)
            elseif i == 3 then -- Ø£Ø³ÙÙ„
                MainFrame.Size = UDim2.new(0, startSize.X.Offset, 0, startSize.Y.Offset + delta.Y)
            elseif i == 4 then -- Ø£Ø¹Ù„Ù‰
                MainFrame.Size = UDim2.new(0, startSize.X.Offset, 0, startSize.Y.Offset - delta.Y)
                MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
            elseif i == 5 then -- Ø£Ø³ÙÙ„ ÙŠÙ…ÙŠÙ†
                MainFrame.Size = UDim2.new(0, startSize.X.Offset + delta.X, 0, startSize.Y.Offset + delta.Y)
            elseif i == 6 then -- Ø£Ø³ÙÙ„ ÙŠØ³Ø§Ø±
                MainFrame.Size = UDim2.new(0, startSize.X.Offset - delta.X, 0, startSize.Y.Offset + delta.Y)
                MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset)
            elseif i == 7 then -- Ø£Ø¹Ù„Ù‰ ÙŠÙ…ÙŠÙ†
                MainFrame.Size = UDim2.new(0, startSize.X.Offset + delta.X, 0, startSize.Y.Offset - delta.Y)
                MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
            elseif i == 8 then -- Ø£Ø¹Ù„Ù‰ ÙŠØ³Ø§Ø±
                MainFrame.Size = UDim2.new(0, startSize.X.Offset - delta.X, 0, startSize.Y.Offset - delta.Y)
                MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
            end
            
