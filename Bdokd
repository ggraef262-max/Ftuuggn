-- ================================================
-- Ù†Ø¸Ø§Ù… Ø§Ù„Ù…Ù‡Ø§Ù… Ø§Ù„Ù…Ø¬Ø¯ÙˆÙ„Ø© (Scheduler)
-- ================================================

local Scheduler = {
    Tasks = {},
    Running = true
}

function Scheduler:AddTask(name, interval, callback, repeats)
    local task = {
        Name = name,
        Interval = interval,
        Callback = callback,
        Repeats = repeats or -1,
        LastRun = 0,
        Enabled = true
    }
    table.insert(self.Tasks, task)
    return task
end

function Scheduler:RemoveTask(name)
    for i, task in ipairs(self.Tasks) do
        if task.Name == name then
            table.remove(self.Tasks, i)
            break
        end
    end
end

RunService.Heartbeat:Connect(function()
    if not Scheduler.Running then return end
    local currentTime = tick()
    for _, task in ipairs(Scheduler.Tasks) do
        if task.Enabled and (task.Repeats ~= 0) and (currentTime - task.LastRun >= task.Interval) then
            task.LastRun = currentTime
            task.Repeats = task.Repeats - 1
            task.Callback()
        end
    end
end)

