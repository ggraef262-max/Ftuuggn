local Settings = {
    CurrentProfile = "Default",
    Profiles = {},
    WindowSize = {500, 350},
    Theme = "Copper",
    Language = "AR",
    SavedData = {}
}

function SaveProfile(name)
    Settings.Profiles[name] = {
        WindowSize = Settings.WindowSize,
        Theme = Settings.Theme,
        Language = Settings.Language,
        SavedData = Settings.SavedData
    }
    if writefile then
        local data = HttpService:JSONEncode(Settings.Profiles)
        writefile("COLCK7_Profiles.json", data)
    end
    MakeNotifi({
        Title = "COLCK 7",
        Text = "ØªÙ… Ø­ÙØ¸ Ø§Ù„Ù…Ù„Ù Ø§Ù„Ø´Ø®ØµÙŠ: " .. name,
        Time = 2
    })
end

function LoadProfile(name)
    if Settings.Profiles[name] then
        Settings.WindowSize = Settings.Profiles[name].WindowSize
        Settings.Theme = Settings.Profiles[name].Theme
        Settings.Language = Settings.Profiles[name].Language
        Settings.SavedData = Settings.Profiles[name].SavedData
        Settings.CurrentProfile = name
        MakeNotifi({
            Title = "COLCK 7",
            Text = "ØªÙ… ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ù…Ù„Ù Ø§Ù„Ø´Ø®ØµÙŠ: " .. name,
            Time = 2
        })
    end
end

-- ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ù…Ù„ÙØ§Øª Ø§Ù„Ù…Ø­ÙÙˆØ¸Ø©
if isfile and isfile("COLCK7_Profiles.json") then
    local success, data = pcall(function()
        return HttpService:JSONDecode(readfile("COLCK7_Profiles.json"))
    end)
    if success then
        Settings.Profiles = data
    end
end

