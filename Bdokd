local function AddSideButton(text, icon, callback)
    local btn = Create("TextButton", SideMenu, {
        Size = UDim2.new(1, 0, 0, 35),
        BackgroundColor3 = Configs_HUB.Cor_Hub,
        Text = ""
    })
    Corner(btn)
    
    if icon then
        local img = Create("ImageLabel", btn, {
            Size = UDim2.new(0, 25, 0, 25),
            Position = UDim2.new(0, 5, 0.5, -12.5),
            BackgroundTransparency = 1,
            Image = icon
        })
    end
    
    local label = Create("TextLabel", btn, {
        Size = UDim2.new(1, -40, 1, 0),
        Position = UDim2.new(0, icon and 35 or 10, 0, 0),
        BackgroundTransparency = 1,
        Text = text,
        TextColor3 = Configs_HUB.Cor_Text,
        TextXAlignment = "Left",
        Font = Configs_HUB.Text_Font,
        TextSize = 14
    })
    
    btn.MouseButton1Click:Connect(callback)
    
    btn.MouseEnter:Connect(function()
        CreateTween(btn, "BackgroundColor3", Configs_HUB.Cor_Stroke, 0.2)
    end)
    btn.MouseLeave:Connect(function()
        CreateTween(btn, "BackgroundColor3", Configs_HUB.Cor_Hub, 0.2)
    end)
    
    return btn
end

