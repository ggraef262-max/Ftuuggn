        AutomaticSize = "Y"
    })
    
    local frame2 = Create("Frame", frame1, {
        Size = UDim2.new(0, Menu_Notifi.Size.X.Offset - 50, 0, 0),
        BackgroundColor3 = Configs_HUB.Cor_Hub,
        Position = UDim2.new(0, Menu_Notifi.Size.X.Offset, 0, 0),
        AutomaticSize = "Y"
    })
    Corner(frame2)
    Stroke(frame2)
    AddShadow(frame2, 0.3)
    
    -- Ø´Ø±ÙŠØ· Ø§Ù„Ø£ÙˆÙ„ÙˆÙŠØ©
    local priorityBar = Create("Frame", frame2, {
        Size = UDim2.new(1, 0, 0, 3),
        BackgroundColor3 = color,
        Position = UDim2.new(0, 0, 0, 0)
    })
    
    local titleLabel = Create("TextLabel", frame2, {
        Size = UDim2.new(1, -30, 0, 25),
        Font = Configs_HUB.Text_Font,
        BackgroundTransparency = 1,
        Text = title,
        TextSize = 20,
        Position = UDim2.new(0, 15, 0, 8),
        TextXAlignment = "Left",
        TextColor3 = color
    })
    
    local closeBtn = Create("TextButton", frame2, {
        Text = "âœ•",
        Font = Configs_HUB.Text_Font,
        TextSize = 18,
        BackgroundTransparency = 1,
        TextColor3 = Configs_HUB.Cor_Stroke,
        Position = UDim2.new(1, -25, 0, 10),
        Size = UDim2.new(0, 20, 0, 20)
    })
    
    local messageLabel = Create("TextLabel", frame2, {
        Size = UDim2.new(1, -30, 0, 0),
        Position = UDim2.new(0, 15, 0, 38),
        TextSize = 14,
        TextColor3 = Configs_HUB.Cor_DarkText,
        TextXAlignment = "Left",
        TextYAlignment = "Top",
        AutomaticSize = "Y",
        Text = text,
        Font = Configs_HUB.Text_Font,
        BackgroundTransparency = 1,
        TextWrapped = true
    })
    
    local progressBar = Create("Frame", frame2, {
        Size = UDim2.new(1, 0, 0, 2),
        BackgroundColor3 = color,
        Position = UDim2.new(0, 2, 0, 30),
        BorderSizePixel = 0
    })
    Corner(progressBar)
    
    Create("Frame", frame2, {
        Size = UDim2.new(0, 0, 0, 5),
        Position = UDim2.new(0, 0, 1, 5),
        BackgroundTransparency = 1
    })
    
    -- ØµÙˆØª Ø§Ù„Ø¥Ø´Ø¹Ø§Ø±
    if sound then
        local soundObj = Instance.new("Sound")
        soundObj.SoundId = NotificationSounds[sound] or sound
        soundObj.Volume = 0.5
        soundObj.Parent = frame2
        soundObj:Play()
    end
    
    task.spawn(function()
        CreateTween(progressBar, "Size", UDim2.new(0, 0, 0, 2), timewait)
    end)
    
    closeBtn.MouseButton1Click:Connect(function()
        CreateTween(frame2, "Position", UDim2.new(0, -20, 0, 0), 0.1)
        CreateTween(frame2, "Position", UDim2.new(0, Menu_Notifi.Size.X.Offset, 0, 0), 0.5, function()
            frame1:Destroy()
        end)
    end)
    
    task.spawn(function()
        CreateTween(frame2, "Position", UDim2.new(0, -20, 0, 0), 0.5)
        CreateTween(frame2, "Position", UDim2.new(), 0.1)
        task.wait(timewait)
        if frame2 then
